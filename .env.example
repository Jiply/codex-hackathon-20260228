# Copy to .env and replace placeholder values.

# Required for LLM task endpoint (/agents/{agent_id}/llm/task)
OPENAI_API_KEY=sk-REPLACE_ME
OPENAI_SECRET_NAME=mortal-replicator-secrets

# Required for Modal CLI/SDK access
MODAL_TOKEN_ID=ak-REPLACE_ME
MODAL_TOKEN_SECRET=ms-REPLACE_ME

# Optional app metadata
MODAL_APP_NAME=mortal-replicator-colony
MODAL_API_LABEL=mortal-replicator-api
APP_VERSION=0.1.0

# Optional CORS config for local dashboard origins
CORS_ALLOW_ORIGINS=http://localhost:5174,http://127.0.0.1:5174

# Optional model tuning
LLM_MODEL=gpt-5.3-codex
LLM_MAX_OUTPUT_TOKENS=700

# Optional runtime knobs
DEFAULT_RENT_PER_TICK=0.5
DEFAULT_SAFETY_BUFFER=0.3
DEFAULT_MAX_BYTES=32768
STEALTH_FAILURE_THRESHOLD=2
INSOLVENCY_THRESHOLD=2
LOW_QUALITY_THRESHOLD=3
QUALITY_FLOOR=0.6
UNAUTHORIZED_TOOL_THRESHOLD=3
REPLICATION_MARGIN_THRESHOLD=1.0
REPLICATION_QUALITY_THRESHOLD=0.8
